# Database Configuration (Get from Neon.tech)
SPRING_DATASOURCE_URL=jdbc:postgresql://YOUR_NEON_HOST:5432/YOUR_DATABASE_NAME
SPRING_DATASOURCE_USERNAME=your_neon_username
SPRING_DATASOURCE_PASSWORD=your_neon_password

# OpenAI API Key (Get from platform.openai.com)
SPRING_AI_OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# MinIO / Cloudflare R2 Configuration
MINIO_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
MINIO_ACCESS_KEY=your_cloudflare_r2_access_key
MINIO_SECRET_KEY=your_cloudflare_r2_secret_key
MINIO_BUCKET_NAME=careergate-resumes

# JWT Secret (Generate a random 256-bit string)
JWT_SECRET=your-super-secret-jwt-key-min-256-bits-long-change-this-in-production

# CORS Configuration (Update with your frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://careergate.vercel.app

# Server Port (Optional - Render uses PORT env variable)
SERVER_PORT=8080
